  title = {Heritability of Left Ventricular Mass: The {{Framingham Heart Study}}},
  shorttitle = {Heritability of Left Ventricular Mass},
  author = {Post, W. S. and Larson, M. G. and Myers, R. H. and Galderisi, M. and Levy, D.},
