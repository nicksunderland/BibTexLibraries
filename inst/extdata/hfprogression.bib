  pmid = {17000927},
  keywords = {Adult,Angiotensin-Converting Enzyme 2,Blood Pressure,Female,Genetic Predisposition to Disease,Humans,Hypertension,Male,Neprilysin,Pedigree,Peptidyl-Dipeptidase A,{Sequence Homology, Amino Acid}},
