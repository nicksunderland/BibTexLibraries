  author = {Kenchaiah, Satish and Pocock, Stuart J. and Wang, Duolao and Finn, Peter V. and Zornoff, Leonardo A. M. and Skali, Hicham and Pfeffer, Marc A. and Yusuf, Salim and Swedberg, Karl and Michelson, Eric L. and Granger, Christopher B. and McMurray, John J. V. and Solomon, Scott D. and {CHARM Investigators}},
